<Window x:Class="Productie_deel2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Productie_deel2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*" />
            <ColumnDefinition Width="300*" />
        </Grid.ColumnDefinitions>
        <Label Content="Productnaam"
               HorizontalAlignment="Left"
               Margin="45,62,0,0"
               VerticalAlignment="Top" />
        <TextBox x:Name="txtProduct"
                 HorizontalAlignment="Left"
                 Margin="200,70,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120" />
        <Button x:Name="btnVoegToe"
                Content="Voeg product toe"
                HorizontalAlignment="Left"
                Margin="45,160,0,0"
                VerticalAlignment="Top"
                Click="btnVoegToe_Click" />
        <ListBox x:Name="lstProducten"
                 Grid.Column="1" />

    </Grid>
</Window>
